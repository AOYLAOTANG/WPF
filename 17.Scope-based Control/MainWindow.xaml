<Window x:Class="_17.Scope_based_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Slider Height="Auto" Margin="5" Name="slider1" VerticalAlignment="Top" 
                Orientation="Horizontal" Maximum="20" Minimum="0" Value="10" TickPlacement="Both" TickFrequency="5"
                IsSelectionRangeEnabled="True" SelectionStart="15" SelectionEnd="20"
                SmallChange="1" LargeChange="5"/>
        <ProgressBar Grid.Row="1" Height="20" Margin="5" Name="progressBar1"
                     Maximum="100" Minimum="0" IsIndeterminate="False"/>
        <Button Content="Button" Grid.Row="1" Height="23" Margin="218,120,211,12" Name="button1" Width="75" Click="button1_Click" />
    </Grid>
</Window>
